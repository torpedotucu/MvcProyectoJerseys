@if (Context.User.Identity.IsAuthenticated == false)
{
    <li class="nav-item list-group-item">
        <a class="nav-link-sport"
           asp-controller="Camisetas"
           asp-action="PerfilUsuario">
            <i class="fas fa-sign-in-alt me-1"></i> Log In
        </a>
    </li>
}
else
{
    <li class="nav-item list-group-item">
        <a asp-action="CreateCamiseta" asp-controller="Camisetas" class="nav-link-sport">
            <i class="fas fa-tshirt"></i> Nueva Camiseta
        </a>
    </li>
    <li class="nav-item list-group-item">
        <a class="nav-link-sport"
           asp-controller="Usuarios"
           asp-action="Logout">
            <i class="fas fa-sign-out-alt me-1"></i> Log out
            <span class="ms-1 fw-bold">
                @Context.User.Identity.Name
            </span>
        </a>
    </li>

    <li class="nav-item list-group-item">
        <a class="nav-link-sport"
           asp-controller="Camisetas"
           asp-action="PerfilUsuario">
            <i class="fas fa-user-circle me-1"></i> Mi perfil
        </a>
    </li>
}

