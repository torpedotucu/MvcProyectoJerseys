<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcProyectoJerseys</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/svg" href="/images/logo-clean.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcProyectoJerseys.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
                <div class="col-md-3 mb-2 mb-md-0">
                    <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                        <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap" /></svg>
                    </a>
                </div>
                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-controller="Camisetas" asp-action="Index" asp class="nav-link px-2 link-secondary">Home</a></li>
                    <li>
                        <a asp-action="PerfilUsuario" asp-controller="Camisetas"
                           class="nav-link px-2">
                            Perfil
                        </a>
                    </li>
                    <li>
                        <a asp-action="CreateCamiseta" asp-controller="Camisetas" class="nav-link text-bg-danger">
                            Create Camiseta
                        </a>
                    </li>
                    <partial name="_MenuLogin" />
                </ul>

                <div class="col-md-3 text-end">
                    <a asp-controller="Usuarios" asp-action="CreateUsuario" class="btn btn-outline-primary me-2">SignUp</a>
                    <a asp-controller="Usuarios" asp-action="Login" class="btn btn-primary">LogIn</a>
                </div>
            </header>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MvcProyectoJerseys - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
