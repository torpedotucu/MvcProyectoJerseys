<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcProyectoJerseys</title>
    <script type="importmap"></script>
    <link rel="icon" type="image/svg" href="/images/logo-clean.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcProyectoJerseys.styles.css" asp-append-version="true" />
    <!-- Google Font Roboto para Material Design -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- FontAwesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Header con diseño Material Sport Card -->
    <header class="navbar-sport sticky-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark p-0">
                <a class="navbar-brand-custom" href="/">
                    <img src="/images/logo-clean.png" alt="Logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a asp-controller="Camisetas" asp-action="Index"
                               class="nav-link-sport @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="PerfilUsuario" asp-controller="Camisetas"
                               class="nav-link-sport @(ViewContext.RouteData.Values["Action"].ToString() == "PerfilUsuario" ? "active" : "")">
                                <i class="fas fa-user me-1"></i> Perfil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="CreateCamiseta" asp-controller="Camisetas" class="btn-create">
                                <i class="fas fa-tshirt"></i> Nueva Camiseta
                            </a>
                        </li>
                        
                    </ul>
                    <partial name="_MenuLogin" />
                    @* <div class="auth-buttons"> *@
                    @*     <a asp-controller="Usuarios" asp-action="CreateUsuario" class="btn btn-auth btn-signup me-2"> *@
                    @*         <i class="fas fa-user-plus me-1"></i> Registrarse *@
                    @*     </a> *@
                    @*     <a asp-controller="Usuarios" asp-action="Login" class="btn btn-auth btn-login"> *@
                    @*         <i class="fas fa-sign-in-alt me-1"></i> Iniciar Sesión *@
                    @*     </a> *@
                    @* </div> *@
                </div>
            </nav>
        </div>
    </header>

    <!-- Contenedor principal -->
    <div class="main-container">
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer estilo Material Sport Card -->
    <footer class="footer-sport">
        <div class="container">
            <div class="footer-content">
                <div>
                    <span>&copy; 2025 - MvcProyectoJerseys</span>
                </div>

                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
                </div>

                <div class="social-links">
                    <a href="#" title="Facebook"><i class="fab fa-facebook"></i></a>
                    <a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" title="Instagram"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>