@{
    ViewData["Title"] = "Home Page";
}



<style>
    :root {
        --primary-blue: #1a5276;
        --accent-yellow: #e4f00a;
        --accent-teal: #39c0ba;
        --button-orange: #e67e22;
    }

    body {
        font-family: Arial, sans-serif;
        overflow-x: hidden;
    }

    .hero-section {
        background-color: var(--primary-blue);
        min-height: 100vh;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        padding: 60px 0;
        position: relative;
        z-index: 2;
    }

    .logo-container {
        margin-bottom: 40px;
    }

    .logo-img {
        max-width: 150px;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 800;
        line-height: 1.1;
        color: var(--accent-yellow);
        margin-bottom: 40px;
    }

    .cta-button {
        background-color: var(--button-orange);
        color: #fff;
        border: none;
        border-radius: 50px;
        padding: 15px 50px;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
        transition: all 0.3s;
    }

        .cta-button:hover {
            background-color: #d35400;
            transform: translateY(-3px);
        }

    .hero-image-container {
        position: relative;
    }

    .blob-shape {
        position: absolute;
        top: -100px;
        right: -100px;
        width: 700px;
        height: 700px;
        background-color: var(--accent-teal);
        border-radius: 71% 29% 65% 35% / 33% 56% 44% 67%;
        z-index: 1;
    }

    .hero-people {
        position: relative;
        z-index: 2;
        max-width: 100%;
        height: auto;
    }
</style>

    <section class="hero-section">
        <div class="container">
            <div class="row hero-content">
                <div class="col-lg-6">
                    <div class="logo-container">
                        
                            <img src="~/images/logoweightclean.png" width="350px" height="200px" class="d-inline-block align-top" alt="Logo">
                        
                    </div>
                    <h1 class="hero-title">Comparte tus camisetas preferidas con tus amigos</h1>
                    <a asp-controller="Usuarios" asp-action="CreateUsuario" class="cta-button">Únete ahora</a>
                </div>
                <div class="col-lg-6 hero-image-container">
                    
                        <img src="~/images/cesped.jpeg" class="blob-shape" alt="Alternate Text" />
                    
                
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

