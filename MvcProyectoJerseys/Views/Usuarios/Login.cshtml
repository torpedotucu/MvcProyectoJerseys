
<section class="bg-light py-3 py-md-5 py-xl-8">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
                <div class="card border border-light-subtle rounded-4">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <form asp-action="Login" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <div class="row gy-3 overflow-hidden">

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input name="correo" type="email" class="form-control" placeholder="name@example.com" required />
                                        <label for="correo" class="form-label">Correo</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <input name="password" type="password" class="form-control" placeholder="Password" required />
                                        <label for="password" class="form-label">Contraseña</label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary btn-lg" type="submit">Iniciar Sesion</button>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>

                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
                    <p class="m-0 text-secondary text-center">¿Ya tienes cuenta? <a asp-controller="Usuarios" asp-action="Login" class="link-primary text-decoration-none">Iniciar sesión</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">
        Credenciales incorrectos
    </div>
}